{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "title": {
      "type": "string"
    },
    "fields": {
      "type": "array",
      "items": { "$ref": "#/$defs/field" }
    },
    "actions": {
      "type": "array",
      "items": { "$ref": "#/$defs/action" }
    }
  },
  "required": ["title", "fields", "actions"],
  "$defs": {
    "action": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "label": {
          "type": "string"
        }
      },
      "required": ["label", "name"]
    },
    "field": {
      "oneOf": [
        {
          "type": "object",
          "required": ["label", "name", "type"],
          "additionalProperties": false,
          "properties": {
            "label": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": ["number", "input", "textarea", "date"]
            }
          }
        },
        {
          "type": "object",
          "required": ["type", "name", "options"],
          "additionalProperties": false,
          "properties": {
            "label": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": ["checkbox", "radio"]
            },
            "name": {
              "type": "string"
            },
            "options": {
              "type": "array",
              "items": { "$ref": "#/$defs/optionField" }
            }
          }
        }
      ]
    },
    "optionField": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "label": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      },
      "required": ["label", "value"]
    }
  }
}
